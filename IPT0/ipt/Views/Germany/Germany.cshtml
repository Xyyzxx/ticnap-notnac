@{
    ViewData["Title"] = "Germany";
}

<div class="container mt-5 fade-in">
    <h2 class="text-center mb-4">Discover Germany</h2>
    <p class="text-center mb-5">Experience the rich history and vibrant culture of Germany through its iconic landmarks.</p>

    <!-- Image Carousel -->
    <div id="germanyCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#germanyCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Neuschwanstein Castle"></button>
            <button type="button" data-bs-target="#germanyCarousel" data-bs-slide-to="1" aria-label="Brandenburg Gate"></button>
            <button type="button" data-bs-target="#germanyCarousel" data-bs-slide-to="2" aria-label="Cologne Cathedral"></button>
            <button type="button" data-bs-target="#germanyCarousel" data-bs-slide-to="3" aria-label="Oktoberfest"></button>
            <button type="button" data-bs-target="#germanyCarousel" data-bs-slide-to="4" aria-label="Berlin TV Tower"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/germany/castle.jpg" class="d-block w-100 img-fluid rounded shadow" alt="Neuschwanstein Castle">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Neuschwanstein Castle</h5>
                    <p>A fairy-tale castle nestled in the Bavarian Alps.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/germany/bran.jpg" class="d-block w-100 img-fluid rounded shadow" alt="Brandenburg Gate">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Brandenburg Gate</h5>
                    <p>An iconic symbol of Berlin and German reunification.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/germany/catherdal.jpg" class="d-block w-100 img-fluid rounded shadow" alt="Cologne Cathedral">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Cologne Cathedral</h5>
                    <p>A stunning Gothic cathedral and UNESCO World Heritage site.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/germany/oktober.jpg" class="d-block w-100 img-fluid rounded shadow" alt="Oktoberfest">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Oktoberfest</h5>
                    <p>The world's largest beer festival held annually in Munich.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/germany/berlin.jpg" class="d-block w-100 img-fluid rounded shadow" alt="Berlin TV Tower">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Berlin TV Tower</h5>
                    <p>A prominent landmark offering panoramic views of the city.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#germanyCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#germanyCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Description -->
    <div class="row">
        <div class="col-md-6">
            <h4>About Germany</h4>
            <p>
                Germany, located in Central Europe, is known for its influential culture, engineering prowess, and scenic landscapes. From bustling cities like Berlin and Munich to picturesque towns and majestic castles, Germany offers a diverse array of experiences.
            </p>
        </div>
        <div class="col-md-6">
            <h4>Top Attractions</h4>
            <ul>
                <li>Neuschwanstein Castle</li>
                <li>Brandenburg Gate</li>
                <li>Cologne Cathedral</li>
                <li>Oktoberfest</li>
                <li>Berlin TV Tower</li>
            </ul>
        </div>
    </div>

    <!-- Back to Home Button -->
    <div class="text-center mt-5">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    </div>
</div>
